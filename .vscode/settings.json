{
    // C++ TestMate configuration for Catch2
    "testMate.cpp.test.executables": "build/Release/Tests{.exe,}",
    "testMate.cpp.test.workingDirectory": "${workspaceFolder}",
    "testMate.cpp.log.logpanel": true,
    "testMate.cpp.debug.configTemplate": {
        "type": "cppvsdbg",
        "linux": {
            "type": "cppdbg",
            "MIMode": "gdb"
        },
        "darwin": {
            "type": "cppdbg",
            "MIMode": "lldb"
        },
        "win32": {
            "type": "cppvsdbg"
        }
    },
    // Catch2 discovery settings
    "testMate.cpp.discovery.loadOnStartup": true,
    "testMate.cpp.discovery.gracePeriodForMissing": 10,
    "testMate.cpp.discovery.strictPattern": false,
    // Test execution settings
    "testMate.cpp.test.parallelExecutionLimit": 1,
    // Disable automatic test reruns to avoid file locking
    "testMate.cpp.test.rerunAfterStdIn": false
}