{
  "version": "2.0.0",
  "name": "Muse OLED Design System - ACTUAL FINAL",
  "description": "Extracted from code.html - the real design. Dark teal hardware aesthetic with mint OLED elements.",

  "canvas": {
    "width": 400,
    "height": 600,
    "orientation": "vertical",
    "background": "#2F4F4F",
    "description": "Dark teal background, vertical layout"
  },

  "colors": {
    "background": {
      "main": "#2F4F4F",
      "description": "Dark teal - main plugin background"
    },
    "mouthPanel": {
      "background": "#000000",
      "description": "Pure black - mouth display panel background"
    },
    "mint": {
      "base": "#d8f3dc",
      "description": "Mint green - OLED color for all text and indicators"
    },
    "knob": {
      "gradientTop": "#325555",
      "gradientBottom": "#2c4949",
      "insetShadowDark": "#263e3e",
      "insetShadowLight": "#385f5f",
      "center": "#2F4F4F"
    },
    "border": {
      "line": "#3A5A5A"
    }
  },

  "typography": {
    "header": {
      "text": "MUSE",
      "size": 16,
      "weight": "bold",
      "letterSpacing": "0.2em",
      "glow": "0 0 2px rgba(216, 243, 220, 0.4), 0 0 5px rgba(216, 243, 220, 0.3), 0 0 8px rgba(216, 243, 220, 0.2)"
    },
    "knobLabel": {
      "size": 14,
      "weight": "semibold",
      "letterSpacing": "widest"
    },
    "knobValue": {
      "size": 12,
      "weight": "mono"
    }
  },

  "layout": {
    "padding": 24,
    "header": {
      "height": 40,
      "marginBottom": 16
    },
    "mouthPanel": {
      "height": 150,
      "marginBottom": 24,
      "borderRadius": 2,
      "innerPadding": 16
    },
    "knobsArea": {
      "gap": 32,
      "topRowSpacing": "space-around",
      "bottomRowCentered": true
    }
  },

  "components": {
    "mouth": {
      "type": "horizontal-line",
      "description": "Simple mint green horizontal line in black panel - NOT an ellipse",
      "color": "#d8f3dc",
      "height": 2,
      "width": "100%",
      "glow": "0 0 2px rgba(216, 243, 220, 0.4), 0 0 5px rgba(216, 243, 220, 0.3), 0 0 8px rgba(216, 243, 220, 0.2)"
    },
    "knob": {
      "diameter": 72,
      "style": "3D skeuomorphic",
      "background": "linear-gradient(145deg, #325555, #2c4949)",
      "insetShadow": "inset 2px 2px 4px #263e3e, inset -2px -2px 4px #385f5f",
      "dropShadow": "1px 1px 2px rgba(0,0,0,0.5)",
      "centerDiameter": "80%",
      "indicators": {
        "dot": {
          "size": 4,
          "color": "#d8f3dc",
          "position": "top, 6px from edge",
          "glow": "0 0 2px rgba(216, 243, 220, 0.4), 0 0 5px rgba(216, 243, 220, 0.3)"
        },
        "line": {
          "width": 2,
          "height": 12,
          "color": "#d8f3dc",
          "position": "top, 6px from edge",
          "glow": "0 0 2px rgba(216, 243, 220, 0.4), 0 0 5px rgba(216, 243, 220, 0.3)"
        }
      },
      "rotation": {
        "min": -135,
        "max": 135,
        "range": 270
      }
    }
  },

  "knobPositions": [
    {"name": "MORPH", "row": 1, "position": "left"},
    {"name": "INTENSITY", "row": 1, "position": "right"},
    {"name": "MIX", "row": 2, "position": "center"}
  ],

  "effects": {
    "oledGlow": {
      "main": "0 0 2px rgba(216, 243, 220, 0.4), 0 0 5px rgba(216, 243, 220, 0.3), 0 0 8px rgba(216, 243, 220, 0.2)",
      "subtle": "0 0 1px rgba(216, 243, 220, 0.3), 0 0 3px rgba(216, 243, 220, 0.2)"
    }
  },

  "locked": true,
  "source": "code.html - THE ACTUAL FINAL DESIGN"
